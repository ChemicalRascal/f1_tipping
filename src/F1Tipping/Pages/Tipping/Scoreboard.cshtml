@page
@model F1Tipping.Pages.Tipping.ScoreboardModel
@{
    ViewData["Title"] = "Scoreboard";
}

<h1>Scoreboard</h1>

<table class="table">
    <tr>
        <th>
            Player
        </th>
        <th>
            Score
        </th>
        <th>
            Provisional
        </th>
    </tr>
    @foreach (var ps in Model.PlayerScores)
    {
        <tr>
            <td>
                @ps.Name
            </td>
            <td>
                @ps.CompleteScore
            </td>
            <td>
                @if (ps.ProvisionalScore != 0m)
                {
                    @($"+{ps.ProvisionalScore}")
                }
            </td>
        </tr>
    }
</table>

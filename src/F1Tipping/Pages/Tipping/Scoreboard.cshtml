@page
@model F1Tipping.Pages.Tipping.ScoreboardModel
@{
    ViewData["Title"] = "Scoreboard";
}

<h1>Scoreboard</h1>

<table class="table">
    @foreach (var ps in Model.PlayerScores)
    {
        <tr>
            <td>
                @ps.Name
            </td>
            <td>
                @ps.Score
            </td>
        </tr>
    }
</table>

@page
@model IndexModel
@{
    ViewData["Title"] = "Tipping";
}

@foreach (var e in Model.EventTips)
{
    <div class="row">
        <div class="col">
            <a asp-page="./Event" asp-route-id="@e.EventId">@e.Name</a>
        </div>
        <div class="col">
            @Html.DisplayFor(_ => e.HasTips)
        </div>
        <div class="col">
            @Html.DisplayFor(_ => e.Score)
        </div>
    </div>
}

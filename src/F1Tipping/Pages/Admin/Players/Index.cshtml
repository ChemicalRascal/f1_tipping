@page
@model IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @if (Model.Player[0].Details is not null)
                {
                    @Html.DisplayNameFor(model => model.Player[0].Details!.FirstName)
                }
                else
                {
                    @Html.DisplayText("First Name")
                }
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player[0].AdditionalAuthedUsers)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Player)
        {
            <tr>
                <td>
                    @if (item.Details is not null)
                    {
                        @Html.DisplayFor(modelItem => item.Details.FirstName)
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdditionalAuthedUsers)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
